" -- display -------------------------------------------------------------------

if exists("+colorcolumn")
  highlight ColorColumn ctermbg=0 guibg=lightgrey  " change column colors
  let &colorcolumn="81,".join(range(120,999),",")  " display a (soft) marker after column 80, and a hard marker after column 120
endif

if exists("+relativenumber")
  set norelativenumber
endif

" enable spellcheck with ss
nnoremap <silent> <leader>ss :set spell! spell?<CR>
